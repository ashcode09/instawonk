  <div class='row'>
    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>User Details</th>
            <th>Following</th>
            <th>Followers</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <% if user.username == nil && user.full_name == nil %>
           <% else %>
            <tr>
              <td class='picture'>
                <% if user.profile_picture == nil || user.profile_picture.empty? %>
                  <img class="profileimg" src="http://www.aheritier.net/wp-content/plugins/all-in-one-seo-pack/images/default-user-image.png">
                <% else %>
                  <img class="profileimg" src='<%= user.profile_picture %>'></td>
                <% end %>
              <td class='user-details'>
                  <span><%= user.full_name %></span>
                  <span><a href='https://instagram.com/<%= user.username %>' target = "_blank">@<%= user.username %></a></span>
                  <p><%= user.bio %></p>
              </td>
              <td class='follows'><%= number_with_delimiter(user.follows) %></td>
              <td class='followers'><%= number_with_delimiter(user.followed_by) %></td>
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
      <div class="text-center"><%= paginate @users %></div>
    </div>
  </div>
